<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <a href="/me/mybook">Sách của tôi</a>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Author</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for( let i = 0; i < book.length; i++ ) { %>
        <tr>
          <th scope="row">1</th>
          <td><%= book[i].name %></td>
          <td><%= book[i].price %></td>
          <td><%= book[i].deleteddAt %></td>
          <td>
            <a id="test" class="btn-restore" href="" data-id="<%= book[i]._id %>" >Khôi phục</a>
          </td>
          <td>
            <a href="" data-bs-toggle="modal" data-bs-target="#delete-warning" data-id="<%= book[i]._id %>" >Xóa Vĩnh Viễn</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <!--delete -->
    <div class="modal" id="delete-warning" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Cảnh Báo !</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <p>Bạn có chắc chắn muốn xóa ?</p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Hủy
            </button>
            <button id="deleteYes" type="button" class="btn btn-danger">
              Xóa Bỏ
            </button>
          </div>
        </div>
      </div>
    </div>

    <form name="deleteDone" method="POST"></form>
		<form name="restoreDone" method="POST"></form>
    <script>
      //delete
      var deleteWarning = document.getElementById("delete-warning");
      
      deleteWarning.addEventListener("show.bs.modal", function (event) {
        var button = event.relatedTarget;
        var id = button.getAttribute("data-id");
        document.getElementById("deleteYes").onclick = () => {
          document.forms["deleteDone"].action ="/me/" + id + "/delete/for ever?_method=DELETE";
          document.forms["deleteDone"].submit();
        };
      });
      
      
				
	
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
